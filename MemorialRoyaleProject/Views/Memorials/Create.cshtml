@model MemorialRoyaleProject.ViewModels.MemorialCreateViewModel

@{
    ViewData["Title"] = "Create";
}
<h3 class="d-flex justify-content-center">Добавить памятник</h3>
<form enctype="multipart/form-data" asp-controller="memorials" asp-action="create" method="post">
    <div class="form-group row d-flex justify-content-center mb-2" >
        <label asp-for="Model" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Model" class="form-control" placeholder="Модель">
            <span asp-validation-for="Model" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row d-flex justify-content-center mb-2">
        <label asp-for="Proportion" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Proportion" class="form-control" placeholder="Размер стеллы">
            <span asp-validation-for="Proportion"></span>
        </div>
    </div>

    <div class="form-group row d-flex justify-content-center mb-2">
        <label asp-for="Granite" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Granite" class="form-control" placeholder="Гранит">
            <span asp-validation-for="Granite"></span>
        </div>
    </div>

    <div class="form-group row d-flex justify-content-center mb-2">
        <label asp-for="Nabor" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Nabor" class="form-control" placeholder="Комплект">
            <span asp-validation-for="Nabor"></span>
        </div>
    </div>

    <div class="form-group row d-flex justify-content-center mb-2">
        <label asp-for="Image" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <div class="custom-file">
                <input asp-for="Image" class="form-control custom-file-input">
            </div>
        </div>
    </div>

    <div asp-validation-summary="All"></div>

    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>


    @section Scripts {
        <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
        </script>
    }
</form>