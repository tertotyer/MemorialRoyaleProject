@model MemorialRoyaleProject.ViewModels.WorkExampleCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<form enctype="multipart/form-data" asp-controller="workexamples" asp-action="create" method="post">
    <h3 class="d-flex justify-content-center">Добавить пример работы</h3>
    <hr />
    <div class="row mb-2">
        <div class="form-group row d-flex justify-content-center">
            <label asp-for="Image" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-6">
                <div class="custom-file">
                    <input asp-for="Image" class="form-control custom-file-input">
                </div>
            </div>
        </div>
    </div>
    <div class="form-group d-flex justify-content-center">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>

    @section Scripts {
            <script>
                $(document).ready(function () {
                    $('.custom-file-input').on("change", function () {
                        var fileName = $(this).val().split("\\").pop();
                        $(this).next('.custom-file-label').html(fileName);
                    });
                });
            </script>
        }
</form>>
