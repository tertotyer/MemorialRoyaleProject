@model MemorialRoyaleProject.Models.News

@{
    ViewData["Title"] = "Create";
}

<h3 class="d-flex justify-content-center">Добавить новость</h3>

<form enctype="multipart/form-data" asp-controller="news" asp-action="create" method="post">
    <div class="form-group row d-flex justify-content-center mb-2" >
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <input asp-for="Name" class="form-control" placeholder="Название">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row d-flex justify-content-center mb-2" >
        <label asp-for="ShortDescription" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <textarea asp-for="ShortDescription" class="form-control" placeholder="Краткое описание"></textarea>
            <span asp-validation-for="ShortDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row d-flex justify-content-center mb-2" >
        <label asp-for="Content" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-4">
            <textarea asp-for="Content" class="form-control" placeholder="Содержание" rows="6"></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
