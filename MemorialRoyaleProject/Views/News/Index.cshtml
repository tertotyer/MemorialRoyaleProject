@model IEnumerable<MemorialRoyaleProject.Models.News>

@{
    ViewData["Title"] = "Index";
}

<h3 class="text-center">Новости</h3>
<div class="text-center">
    @if(User.IsInRole("Admin"))
    {
        <a class="btn btn-success btn-sm" asp-action="Create">Add new news</a>
    }
</div>

<div class="row" style="margin-bottom: 50px;">
    @foreach (var item in Model)
    {
    <div class="card m-3 border-0" style="min-width: 18rem; max-width:30.5%; background-color: #061117;">
        <div class="card-header">
            <h5><a asp-action="ShowNews" asp-route-id="@item.Id">@item.Name</a></h5>
        </div>
        <div class="card-footer-news card-footer">
            <p>@item.ShortDescription</p>
            @if(User.IsInRole("Admin"))
            {
                <a class="btn btn-primary btn-sm" style="opacity: .8 !important;" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                <a class="btn btn-danger btn-sm" style="opacity: .8 !important;" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            }
        </div>
    </div>
    }
</div>

